# https://editorconfig.org/

# top-level .editorconfig file
root = true

[**/node_modules/*]
ignore = true

[**/vendor/*]
ignore = true

[*]
indent_style = space
indent_size = 2
max_line_length = 100
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
keep_padding = false
switch_case_indent = true
space_redirects = true

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
max_line_length = 0
trim_trailing_whitespace = false
insert_final_newline = true

[*.{js,jsx,ts,tsx,css,less,sass,scss,vue,py}]
indent_style = space
indent_size = 2
max_line_length = 100

# [COMMIT_EDITMSG]
# max_line_length = 0
